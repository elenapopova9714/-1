    "import os\n",
    "def CountSize(path):\n",
    "    size = 0\n",
    "    dirs = os.listdir(path)\n",
    "    for file in dirs:\n",
    "        size += os.path.getsize(path)\n",
    "    print(size)\n",
    "F = 'C://Windows/'\n",
    "CountSize(F)"
   ]
